<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.pitt.cs.cs1635.jah234.cathedraltourguide.Quiz">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:id="@+id/quizPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/quiz_prompt" />

        <TextView
            android:id="@+id/quizRoomPrompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/enterNumPrompt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/quizSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:entries="@array/room_names" />

            <Button
                android:id="@+id/button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/enter" />

        </LinearLayout>

        <!--<fragment
            android:id="@+id/afrher_quizFrag"
            android:name="edu.pitt.cs.cs1635.jah234.cathedraltourguide.QuizFragments.quizAfrHer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />-->
    </LinearLayout>

</RelativeLayout>
